@page
@model cw8.Pages.AddGameModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Dodawanie gier</title>
</head>
<body>
    <h1>Dodaj nowa gre</h1>
    <form asp-page="AddMovie" method="POST">
        <div class="row m-3">
            <label class="col-3 text-end" asp-for="@Model.MyGames.Title"></label>
            <input class="col-6" asp-for="@Model.MyGames.Title">
            <span asp-validation-for="@Model.MyGames.Title" class="text-danger col-3"></span>
        </div>
        <div class="row m-3">
            <label class="col-3 text-end" asp-for="@Model.MyGames.ReleseDate"></label>
            <input class="col-6" asp-for="@Model.MyGames.ReleseDate">
            <span asp-validation-for="@Model.MyGames.ReleseDate" class="text-danger col-3"></span>
        </div>
        <div class="row m-3">
            <label class="col-3 text-end" asp-for="@Model.MyGames.Price"></label>
            <input class="col-6" asp-for="@Model.MyGames.Price">
            <span asp-validation-for="@Model.MyGames.Price" class="text-danger col-3 text-end"></span>
        </div>

        <div class="row m-3">
            <label class="col-3 text-end" asp-for="@Model.MyGames.Genre"></label>
            <select class="col-6" asp-for="@Model.MyGames.Genre">
                @foreach(var genre in ViewData["Genres"] as List<string>){
                    <option value="@genre">@genre</option>
                }
            </select>
        </div>

        <div class="row m-3">
            <input type="submit" value="Dodaj" class="oofset-3 col-6 btn btn-primary">
        </div>
    </form>
    <div>
        <a class="btn btn-primary" asp-page="Games">Powrot do listy gier</a>
    </div>
    <hr>
    <div>
        @ViewData["Message"];
    </div>
</body>
</html>
