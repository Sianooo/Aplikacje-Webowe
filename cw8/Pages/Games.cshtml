@page
@model cw8.pages.GamesModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/cw8.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Gry</title>
</head>
<body>
    <h1>Gry o ktorych nie wiedziales!</h1>
    <table>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Lp</th>
                    <th>Tytul</th>
                    <th>Rok produkcji</th>
                    <th>Rodzaj filmu</th>
                    <th>Cena</th>
                </tr>
            </thead>
            <tbody>
                @{int Lp = 0;}
                @foreach (var Games in Model.Games)
                {
                    Lp++;
                    <tr>
                        <td>@Lp</td>
                        <td>@Games.Title</td>
                        <td>@Games.ReleseDate</td>
                        <td>@Games.Genre</td>
                        <td class="text-end">@Games.Price</td>
                        <td>
                            <a class="btn btn-danger" asp-page="DeleteGame" asp-route-id="@Games.Id">Usun</a>
                            <a class="btn btn-secondary" asp-page="EditGame" asp-route-id="@Games.Id">Edytuj</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a asp-page="AddGame">Dodaj gre</a>
        </div>
    </body>
</html>